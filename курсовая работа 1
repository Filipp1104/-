#include <stdlib.h>//обращение к библиотеке
#include <stdio.h>//обращение к библиотеке

#define N 20//задаем размер массива
#define K 10//задаем размер буфера

  int main()
   {
	printf("obrabotka massiva \n indeks      element massiva\n");//показать заголовок процесса и заголовок таблицы 
	int a[N];//обозначаем массив
	int S;//обозначаем сумму элементов
	  for( int i=0; i<N; i++)
	    {
		a[i]=rand();//случайное присваивание значений элементрам массива
		printf("\n a[%d]         %d\n", i, a[i]);//показать элемент массива и его значение
	     }
	  for(int i=0;i<K;i++)
	    {
                S=a[i]+a[i+1]+a[i+2]+a[i+3]+a[i+4]+a[i+5]+a[i+6]+a[i+7]+a[i+8]+a[i+9];//формула суммы 10-ти элементов
	        int P1=S/K;//формула целой части среднего значения 
	        int P2=S%K;//формула десятичной части среднего значения
	        printf("         summa: %d     srednee znachenie: %d,%d \n", S, P1, P2);//показать средние значения 
	     }
	system("pause");
	return 0;
     }
